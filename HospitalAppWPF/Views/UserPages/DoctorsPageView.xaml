            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 40 0 0">
                <ListBox ItemsSource="{Binding Doctors}" Grid.Column="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Image Source="../../../StaticFiles/avatar.png" Width="100" Height="100" Margin="0 0 10 0" Grid.RowSpan="5"/>
                                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding FirstName}" FontSize="20" Margin="0 0 0 5"/>
                                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding LastName}" FontSize="16" Margin="0 0 0 5"/>
                                <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding UserName}" FontSize="16" Margin="0 0 0 5"/>
                                
                                <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal">
                                    <Button Command="{Binding DataContext.appobtn, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                CommandParameter="{Binding Id}"
                                Content="Appointment" Margin="0 5 0 0" />
                                    
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>


        </Grid>
    </Grid>
